{
  "name": "@adobe/helix-cli",
  "version": "14.4.2",
  "description": "Project Helix CLI",
  "main": "index.js",
  "type": "module",
  "bin": {
    "hlx": "./index.js"
  },
  "scripts": {
    "check": "npm run lint && npm run test",
    "test": "c8 mocha",
    "test-ci": "c8 mocha && codecov",
    "test-ci-win": "npx mocha --reporter xunit test --reporter-options output=junit/test.xml -t 5000",
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "prepare": "husky install"
  },
  "mocha": {
    "require": "test/setup-env.js",
    "recursive": "true",
    "reporter": "mocha-multi-reporters",
    "reporter-options": "configFile=.mocha-multi.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-cli.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-cli/issues"
  },
  "homepage": "https://github.com/adobe/helix-cli#readme",
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@adobe/helix-fetch": "3.0.0",
    "@adobe/helix-log": "6.0.0",
    "@adobe/helix-shared-config": "1.7.0",
    "@adobe/helix-shared-git": "1.1.0",
    "@adobe/helix-shared-indexer": "0.2.2",
    "camelcase": "6.2.1",
    "chalk-template": "0.2.0",
    "chokidar": "3.5.2",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "faye-websocket": "0.11.4",
    "fs-extra": "10.0.0",
    "glob": "7.2.0",
    "glob-to-regexp": "0.4.1",
    "ignore": "5.1.9",
    "ini": "2.0.0",
    "isomorphic-git": "1.10.1",
    "jsdom": "18.1.1",
    "livereload-js": "3.3.2",
    "open": "8.4.0",
    "progress": "2.0.3",
    "semver": "7.3.5",
    "shelljs": "0.8.4",
    "uuid": "8.3.2",
    "yargs": "17.3.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.3.1",
    "@adobe/helix-shared-dom": "1.1.5",
    "@adobe/helix-testutils": "0.4.10",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "c8": "7.10.0",
    "codecov": "3.8.3",
    "eslint": "8.4.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.25.3",
    "husky": "7.0.4",
    "junit-report-builder": "3.0.0",
    "lint-staged": "12.1.2",
    "mocha": "9.1.3",
    "mocha-multi-reporters": "1.5.1",
    "nock": "13.2.1",
    "semantic-release": "18.0.1",
    "sinon": "12.0.1"
  },
  "lint-staged": {
    "*.js": "eslint"
  }
}
