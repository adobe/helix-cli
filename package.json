{
  "name": "@adobe/helix-cli",
  "version": "14.0.4",
  "description": "Project Helix CLI",
  "main": "index.js",
  "bin": {
    "hlx": "./index.js"
  },
  "scripts": {
    "check": "npm run lint && npm run test",
    "test": "nyc mocha",
    "test-ci": "nyc mocha && codecov",
    "test-ci-win": "npx mocha --reporter xunit test --reporter-options output=junit/test.xml -t 5000",
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "commit": "git-cz"
  },
  "mocha": {
    "require": "test/setup-env.js",
    "recursive": "true",
    "reporter": "mocha-multi-reporters",
    "reporter-options": "configFile=.mocha-multi.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-cli.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-cli/issues"
  },
  "homepage": "https://github.com/adobe/helix-cli#readme",
  "engines": {
    "node": ">=12.11.1 <15.0"
  },
  "dependencies": {
    "@adobe/helix-fetch": "3.0.0",
    "@adobe/helix-log": "6.0.0",
    "@adobe/helix-shared-git": "1.0.3",
    "camelcase": "6.2.0",
    "chalk": "4.1.2",
    "chokidar": "3.5.2",
    "dotenv": "10.0.0",
    "express": "4.17.1",
    "faye-websocket": "0.11.4",
    "fs-extra": "10.0.0",
    "glob": "7.2.0",
    "glob-to-regexp": "0.4.1",
    "ignore": "5.1.8",
    "ini": "2.0.0",
    "isomorphic-git": "1.10.1",
    "livereload-js": "3.3.2",
    "open": "8.4.0",
    "progress": "2.0.3",
    "semver": "7.3.5",
    "shelljs": "0.8.4",
    "uuid": "8.3.2",
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.3.0",
    "@adobe/helix-shared-dom": "1.1.1",
    "@adobe/helix-testutils": "0.4.10",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "codecov": "3.8.3",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.1.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.25.2",
    "ghooks": "2.0.4",
    "jsdom": "18.0.1",
    "junit-report-builder": "3.0.0",
    "lint-staged": "11.2.6",
    "mocha": "9.1.3",
    "mocha-multi-reporters": "1.5.1",
    "nock": "13.1.4",
    "nyc": "15.1.0",
    "semantic-release": "18.0.0",
    "sinon": "11.1.2"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
